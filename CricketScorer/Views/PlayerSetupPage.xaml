<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CricketScorer.PlayerSetupPage"
             Title="Add Players"
             BackgroundColor="White">

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label x:Name="TeamALabel" Text="Team A Players" FontAttributes="Bold" FontSize="18" Grid.Row="0" />
            <VerticalStackLayout x:Name="TeamAPlayersStack" Spacing="10" Grid.Row="1" />
            <Button Text="Add Player to Team A" Clicked="OnAddTeamAPlayerClicked" Grid.Row="2" />

            <Label x:Name="TeamBLabel" Text="Team B Players" FontAttributes="Bold" FontSize="18" Grid.Row="3" />
            <VerticalStackLayout x:Name="TeamBPlayersStack" Spacing="10" Grid.Row="4" />
            <Button Text="Add Player to Team B" Clicked="OnAddTeamBPlayerClicked" Grid.Row="5" />

            <Button Text="Start Match Team A batting" Clicked="OnStartMatchTeamAFirstClicked" Margin="0,30,0,0" Grid.Row="6" />
            <Button Text="Start Match Team B batting" Clicked="OnStartMatchTeamBFirstClicked" Margin="0,5,0,0" Grid.Row="7" />
        </Grid>
    </ScrollView>
</ContentPage>
