<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CricketScorer.Views.PlayerSetupPage"
             Title="Player Setup"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Enter Batter Names" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry x:Name="PlayerNameEntry" Placeholder="Enter player name..." />

            <Button Text="Add Player" Clicked="OnAddPlayerClicked" />

            <CollectionView x:Name="PlayersCollectionView" HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" FontSize="18" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Start Match" BackgroundColor="Green" TextColor="White" Clicked="OnStartMatchClicked" />

        </VerticalStackLayout>

    </ContentPage>
