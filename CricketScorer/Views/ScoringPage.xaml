<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CricketScorer.Views.ScoringPage"
             Title="ScoringPage">

    <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center">

        <!-- Score Display -->
        <Label x:Name="ScoreLabel" Text="Score: 0/0" FontSize="36" HorizontalOptions="Center" />
        <Label x:Name="OverLabel" Text="Overs: 0" FontSize="24" HorizontalOptions="Center" />

        <!-- Action Buttons -->
        <Button Text="Dot" Clicked="OnDotClicked" />
        <Button Text="+1 Run" Clicked="OnOneRunClicked" />
        <Button Text="+4 Runs" Clicked="OnFourRunsClicked" />
        <Button Text="+6 Runs" Clicked="OnSixRunsClicked" />
        <Button Text="Wide" Clicked="OnWideClicked" />
        <Button Text="No Ball" Clicked="OnNoBallClicked" />
        <Button Text="Wicket" BackgroundColor="Red" TextColor="White" Clicked="OnWicketClicked" />
        <Button Text="End Over" BackgroundColor="DarkGray" Clicked="OnEndOverClicked" />
        <Button Text="Undo Last Ball" BackgroundColor="Orange" TextColor="Black" Clicked="OnUndoClicked" />
        <Button Text="End Innings" BackgroundColor="Green" TextColor="White" Clicked="OnEndInningsClicked" />

        <Label Text="Last 2 Overs" FontAttributes="Bold" />

        <Label x:Name="LastOver1Label" Text="-" FontSize="18" />
        <Label x:Name="LastOver2Label" Text="-" FontSize="18" />
    </VerticalStackLayout>
</ContentPage>
