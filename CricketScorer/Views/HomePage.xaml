<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CricketScorer.Views.HomePage"
             Title="HomePage"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Cricket Scorer" FontSize="32" HorizontalOptions="Center" />
        <Button Text="New Match" BackgroundColor="DarkGreen" TextColor="White" Clicked="OnPlayerSetUpClicked" />
        <Button Text="New Match (Default teams)" BackgroundColor="DarkGreen" TextColor="White" Clicked="OnNewMatchDefaultTeamsClicked" />
        <Button Text="Start Demo Match" BackgroundColor="DodgerBlue" TextColor="White" Clicked="OnStartDemoMatchClicked" />
        <Button Text="Start Hundred Demo Match" BackgroundColor="LightYellow" TextColor="Black" Clicked="OnStartDemo100MatchClicked" />
        <Button Text="View Saved Matches" BackgroundColor="DodgerBlue" TextColor="White" Clicked="OnViewSavedMatchesClicked" />

    </VerticalStackLayout>

</ContentPage>