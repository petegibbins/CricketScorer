<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CricketScorer.Views.NewMatchPage"
             Title="NewMatchPage">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="TeamAEntry" Placeholder="Enter Team A Name" />
        <Entry x:Name="TeamBEntry" Placeholder="Enter Team B Name" />
        <Entry x:Name="OversEntry" Placeholder="Enter Number of Overs" Keyboard="Numeric" />

        <Button Text="Start Scoring" Clicked="OnStartScoringClicked" Pressed="OnButtonPressed" Released="OnButtonReleased"/>
    </VerticalStackLayout>
</ContentPage>