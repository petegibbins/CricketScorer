<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CricketScorer.MainPage">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label 
            x:Name="RunsLabel"
            Text="Runs: 0"
            FontSize="32"
            HorizontalOptions="Center" />

        <Label 
            x:Name="WicketsLabel"
            Text="Wickets: 0"
            FontSize="32"
            HorizontalOptions="Center" />

        <Button 
            Text="Add 1 Run" 
            Clicked="OnAddRunClicked" />

        <Button 
            Text="Add Wicket" 
            Clicked="OnAddWicketClicked" />

        <Button 
            Text="Reset Score" 
            Clicked="OnResetClicked" 
            BackgroundColor="Red"
            TextColor="White"/>

    </VerticalStackLayout>

</ContentPage>

